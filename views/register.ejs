<%- include('partials/header-login.ejs') %>
<link rel="stylesheet" href="/stylesheets/overflow.css" />
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card-body">
      <h1 class="text-center mb-3">REGISTER</h1>
      <%- include('partials/messages.ejs') %>
      <form class="m-auto" action="register" method="POST" style="width: 30rem">
        <div class="register_form_group form-group">
          <label for="name">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name :
          '' %>"
          />
        </div>
        <div class="register_form_group form-group">
          <label for="username">Username</label>
          <input
            type="text"
            id="username"
            name="username"
            class="form-control"
            placeholder="Enter Username"
            value="<%= typeof username != 'undefined'
          ? username : '' %>"
          />
        </div>
        <div class="register_form_group form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
          />
        </div>
        <div class="register_form_group form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
          />
        </div>
        <div class="form-group text-center">
          <button
            type="submit"
            class="btn btn-outline-primary btn-block"
            style="width: 8rem"
          >
            Register
          </button>
        </div>
      </form>
      <p class="lead mt-4 text-center">
        Have An Account? <a href="login">Login</a>
      </p>
    </div>
  </div>
  <div class="topRightImg">
    <img src="/images/toprighttest.png" alt="" />
  </div>
  <div class="bottomLeftImg">
    <img src="/images/bottomleft.png" alt="" />
  </div>
</div>
